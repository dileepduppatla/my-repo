pipeline {
    agent {
        docker {
            image 'node:latest'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'echo Building the project...'
            }
        }
        stage('Test') {
            steps {
                sh 'echo Running tests...'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo Deploying the application...'
            }
        }
    }
}
